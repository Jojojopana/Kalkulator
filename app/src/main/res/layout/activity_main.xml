<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="MainActivity">

    <!-- Tampilan Output Kalkulator -->
    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="24sp"
        android:gravity="end"
        android:layout_marginBottom="16dp"/>

    <!-- Tampilan Input Kalkulator -->
    <EditText
        android:id="@+id/inputEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:textSize="24sp"
        android:layout_marginBottom="16dp"/>

    <!-- Tombol-tombol Kalkulator -->
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="10"
        android:padding="8dp">

        <!-- Tombol-tombol angka -->
        <Button
            android:id="@+id/btnOne"
            android:text="1"
            style="@style/CalculatorButton" />
        <Button
            android:id="@+id/btnTwo"
            android:text="2"
            style="@style/CalculatorButton" />
        <Button
            android:id="@+id/btnThree"
            android:text="3"
            style="@style/CalculatorButton" />

        <Button
            android:id="@+id/btnFour"
            style="@style/CalculatorButton"
            android:layout_row="1"
            android:layout_column="0"
            android:text="4" />

        <Button
            android:id="@+id/btnFive"
            android:text="5"
            style="@style/CalculatorButton" />
        <Button
            android:id="@+id/btnSix"
            android:text="6"
            style="@style/CalculatorButton" />

        <Button
            android:id="@+id/btnSeven"
            style="@style/CalculatorButton"
            android:layout_row="2"
            android:layout_column="0"
            android:text="7" />

        <Button
            android:id="@+id/btnEight"
            android:text="8"
            style="@style/CalculatorButton" />
        <Button
            android:id="@+id/btnNine"
            android:text="9"
            style="@style/CalculatorButton" />

        <!-- Tambahkan tombol angka lainnya -->

        <!-- Tombol-tombol operator -->
        <Button
            android:id="@+id/btnZero"
            style="@style/CalculatorButton"
            android:layout_row="3"
            android:layout_column="1"
            android:text="0" />

        <Button
            android:id="@+id/btnKoma"
            style="@style/CalculatorButton"
            android:layout_row="3"
            android:layout_column="0"
            android:text="." />

        <!-- Tambahkan tombol operator lainnya -->

        <!-- Tombol '=' -->

        <Button
            android:id="@+id/btnPlus"
            style="@style/CalculatorButton"
            android:layout_row="0"
            android:layout_column="3"
            android:text="+" />

        <Button
            android:id="@+id/btnMinus"
            style="@style/CalculatorButton"
            android:layout_row="1"
            android:layout_column="3"
            android:text="-" />


        <!-- Tombol 'C' untuk menghapus input -->
        <Button
            android:id="@+id/btnTimes"
            style="@style/CalculatorButton"
            android:layout_row="2"
            android:layout_column="3"
            android:text="*" />

        <Button
            android:id="@+id/btnFor"
            style="@style/CalculatorButton"
            android:layout_row="3"
            android:layout_column="3"
            android:text="/" />

        <Button
            android:id="@+id/btnEquals"
            style="@style/CalculatorButton"
            android:layout_row="3"
            android:layout_column="2"
            android:text="=" />

        <!-- Tombol Kurung Buka -->
        <Button
            android:id="@+id/btnClear"
            style="@style/CalculatorButton"
            android:layout_row="4"
            android:layout_column="0"
            android:background="@color/colorAccent"
            android:text="C"
            android:textColor="@android:color/white" />

    </GridLayout>
</LinearLayout>
